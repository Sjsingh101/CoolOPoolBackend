<% include ../../partials/header %>

<div class="container">
    <div class="row">
         <h1 style="text-align: center">Add a new restaurant</h1>
         <div style="width: 30%; margin: 25px auto;">
             <form action="/admin/restaurant/<%= restaurant._id%>?_method=PUT" method="POST">
                 <div class="form-group">
                      <label for="name">Name</label>
                      <input class="form-control" type="text" name="restaurant[name]" placeholder="">
                 </div>
            
                 
                 <div class="form-group">
                     <label for="image">Image Url</label>
                     <input class="form-control" type="text" name="restaurant[image]" placeholder="">
                 </div>
                 
                
                  <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                 </div>
             </form>  
             <a href="/admin/restaurants">Go back</a>
         </div>    
         
   </div>
</div>

<% include ../../partials/footer %>
