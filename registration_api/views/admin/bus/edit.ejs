<% include ../../partials/header %>

<div class="container">
    <div class="row">
         <h1 style="text-align: center">Add a new bus</h1>
         <div style="width: 30%; margin: 25px auto;">
             <form action="/admin/bus/<%= bus._id %>?_method=PUT" method="POST">
                 <div class="form-group">
                      <label for="name">Source</label>
                      <input class="form-control" type="text" name="bus[src]" placeholder="">
                 </div>
                 
                 <div class="form-group">
                        <label for="bus_id">Destination</label>
                        <input class="form-control" type="text" name="bus[dest]" placeholder="">
                   </div>

                 <div class="form-group">
                      <label for="price">Ticket Price</label>
                      <input class="form-control" type="number" name="bus[price]" placeholder="">
                 </div>

                 
                 <div class="form-group">
                        <label for="discount">Company</label>
                        <input class="form-control" type="text" name="bus[company]" placeholder="">
                   </div>
                 
                 <div class="form-group">
                     <label for="image">Image Url</label>
                     <input class="form-control" type="text" name="bus[imageUrl]" placeholder="">
                 </div>   

                  <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                 </div>
             </form>  
             <a href="/admin/buses">Go back</a>
         </div>    
         
   </div>
</div>

<% include ../../partials/footer %>
